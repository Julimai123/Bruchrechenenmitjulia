<body>
    <h1>Rechnen mit Brüchen</h1>
    <h2>Geheimsprache</h2>

    <div class="fraction-container">
        <!-- Fraction part -->
        <div class="fraction">
            <input type="text" id="numerator" maxlength="10" oninput="checkInput('numerator', 'Zähler', 'richtig')">
            <div class="line"></div>
            <input type="text" id="denominator" maxlength="10" oninput="checkInput('denominator', 'Nenner', 'richtig')">
        </div>

        <!-- Status messages -->
        <div class="status" id="numerator-status"></div>
        <div class="status" id="denominator-status"></div>
    </div>

    <script>
        function checkInput(inputId, correctWord, statusId) {
            const inputField = document.getElementById(inputId);
            const statusField = document.getElementById(statusId);
            const value = inputField.value.replace(/\s/g, '');  // Remove spaces

            if (value.length > 10) {
                inputField.value = value.slice(0, 10);  // Limit to 10 characters
            }

            // Check if the input matches the correct word
            if (value.toLowerCase() === correctWord.toLowerCase()) {
                statusField.textContent = "richtig";
                statusField.style.color = "green";
            } else {
                statusField.textContent = "";
            }
        }
    </script>
</body>
